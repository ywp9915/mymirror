.page {
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx;

}

.login_logo {
  margin-top: 60rpx;
  text-align: center;
}

.login_logo image {
  width: 375rpx;
  height: 78rpx;
  text-align: center;
}

.login_title {
  margin-top: 80rpx;
  padding-left: 18rpx;
  font-family: PingFangSC-Medium;
  font-size: 45rpx;
  color: rgb(53, 53, 53);
  font-weight: 700;
}

.login_icon {
  width: 20px;
  height: 20px;
}

form {
  display: flex;
  flex-direction: column;
}

.input_group {
  display: flex;
  flex-direction: row;
  padding-bottom: 12rpx;
  margin-bottom: 60rpx;
  border-bottom: 2rpx solid rgb(204, 204, 204);
}

.input_group:nth-child(3) {
  margin-bottom: 40rpx;
}

.login_form {
  margin-top: 76rpx;
}

.input_lable {
  vertical-align: middle;
  padding-left: 18rpx;
  padding-right: 80rpx;
  margin-bottom: 10rpx;
}

.login_icon {
  vertical-align: middle;
}

.input_bd {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: rgb(170, 170, 170);
}

.login_switch {
  font-family: PingFangSC-Medium;
  padding-left: 18rpx;
  margin-bottom: 65rpx;
  color: rgb(12, 146, 216);
  font-size: 34rpx;
}

.weui-cell {
  padding: 10px 0px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 7rpx;
}

.weui-cell_vcode {
  padding-right: 0;
}

.weui-cell__ft {
  text-align: right;
  color: #999;
}

.weui-vcode-btn, .weui-vcode-img {
  margin-left: 5px;
  vertical-align: middle;
  margin-top: 22rpx;
}

.weui-vcode-btn {
  display: inline-block;
  padding: 0 0.8em 0 0.7em;
  font-size: 17px;
  color: #3cc51f;
  white-space: nowrap;
  margin-top: 0px;
}

.weui-vcode-btn:active {
  color: #52a341;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
