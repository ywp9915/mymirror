page{
  background:rgb(244,244,244);
}
.box{
	overflow: hidden;
	margin-top: 24rpx;
	background: white;
	padding: 0rpx 24rpx;
}
.block{
	overflow: hidden;
	padding-bottom: 21rpx;
	border-bottom: 1rpx solid rgb(238,238,238);
	position: relative;
}
.block_bottom{
	border:none;
}
.block_title{
	font-family: "PingFang-SC-Bold";
	font-size: 28rpx;
	font-weight: bold;
	color:rgb(51,51,51);
	margin-top: 21rpx;
	height: 28rpx;
  line-height: 28rpx;
}
.block_value{
	font-family: "PingFang-SC-Medium";
	font-size: 24rpx;
	color:rgb(136,136,136);
	margin-top: 16rpx;
	height: 24rpx;
  line-height: 24rpx;
}
.right-arrow{
	position:absolute;
	width: 12rpx;
	height: 20rpx;
	top:44rpx;
	right:0rpx;
}
.right_box{
	position: absolute;
	top:41rpx;
	right:0rpx;
	overflow: hidden;
}
.right_text{
	font-size: 26rpx;
	vertical-align: middle;
  margin-right: 6rpx;
}
.right_arrow{
	width: 12rpx;
	height: 20rpx;
}
.on{
	color:rgb(51,201,76);
}
.off{
	color:rgb(170,170,170);
}
.bottom-btn{
	position: fixed;
	bottom:0rpx;
	width: 100%;
	height: 98rpx;
	line-height: 98rpx;
	text-align: center;
	color:white;
	font-family: "PingFang-SC-Bold";
	font-weight: bold;
	margin:0 auto;
	background: rgb(255,152,89);
	font-size: 28rpx;
}