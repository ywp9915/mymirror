page {
  font-size: 16px;
  width: 100%;
  height: auto;
}
.page_hd {
  background-color: #ff784f;
  padding: 75rpx 65rpx 65rpx;
}
.page_bd {
  color: #888;
  text-align: center;
  font-size: 14px;
  padding-bottom:100rpx;
}
.page_title {
  font-family: PingFang-SC-Medium;
  font-size: 15px;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
}
.page_money {
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  align-items:center;
  font-family: PingFang-SC-Medium, PingFang-SC-Blod;
  text-align: center;
  font-size: 78rpx;
  font-weight: 400;
  color: white;
}
.page_money .money{
  position: relative;
}
.page_money .money::first-letter {
  line-height: 78rpx;
  font-size: 39rpx;
  vertical-align: bottom;
}
.page_money .money span{
  display: inline-block;
}
.money .reload{
  position:absolute;
	top:60%;
	left:100%;
	transform:translateY(-60%);
	-webkit-transform:translateY(-60%);
	width:60rpx;
	height:rpx;
	margin-left:30rpx;
	overflow:hidden;

}
.money .reload image{
  width:60rpx;
  height:60rpx;
}

.page_bd image {
  width: 60rpx;
  height: 60rpx;
}
.page_bd .items_hd image {
  width: 70rpx;
  height: 70rpx;
}
.placeholder{
  font-size: 30rpx;
  margin-top: 25rpx;
}
.weui-flex {
  background-color:white;
  overflow:hidden;
}

.weui-flex_item {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.item_first {
  padding: 16rpx 20rpx 12rpx;
  color: rgb(255, 255, 255);
}

.item_second {
  background-color: #ff784f;
  height: 58rpx;
}
.merInfo{
  background: rgb(247,247,247);
  padding: 40rpx 20rpx;
  overflow: hidden;
}
.mercode{
  float: left;
}
.loginout{
  float: right;
}
.item_special {
  padding: 60rpx 0rpx;
  color: rgb(51, 51, 51);
  font-family: PingFang-SC-Medium;
  position: relative;
}

.items_hd {
  /* display: flex;
  flex-direction: row; */
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #ff784f;
}

.border_special{
  border-bottom: 1px solid rgb(238, 238, 238);
  
}
.border_special:after{
  content: '';
  width: 1px;
  height: 100%;
  background: rgb(238, 238, 238);
  position: absolute;
  top: 0;
  right: 0;
}
navigator{
  width: 33.3%;
  float: left;
}