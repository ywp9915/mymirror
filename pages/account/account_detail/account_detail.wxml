
<view class="page">
    <view class="detail-box">
        <view class="type-items">
            <view class="type-name">
                入账账号
            </view>
            <view class="type-value">
                {{accountDetail.mer_bk_accno}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                入账户名
            </view>
            <view class="type-value">
                {{accountDetail.mer_bk_accname}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                入账状态
            </view>
            <view class="type-value">
                {{accountDetail.cls_status}}
            </view>
        </view>
    </view>
    <view class="detail-box">
        <view class="type-items">
            <view class="type-name">
                交易总金额
            </view>
            <view class="type-value plus">
                {{accountDetail.pay_amt}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                交易手续费
            </view>
            <view class="type-value">
                {{accountDetail.mer_fee}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                入账金额
            </view>
            <view class="type-value plus">
                {{accountDetail.cls_amt}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                交易日期
            </view>
            <view class="type-value">
                {{accountDetail.cls_file_date}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                入账日期
            </view>
            <view class="type-value">
                {{accountDetail.cls_date}}
            </view>
        </view>
        <view class="type-items">
            <view class="type-name">
                入账时间
            </view>
            <view class="type-value">
                {{accountDetail.cls_datetime}}
            </view>
        </view>
    </view>
    <view class="explain-title">
        {{illustrate_type}}：
    </view>
    <view class="explain">
        {{accountDetail.cls_desc}}
    </view>
</view>
