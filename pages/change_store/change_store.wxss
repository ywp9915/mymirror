page{
  background:rgb(244,244,244);
}
.box{
	overflow: hidden;
	margin-top: 24rpx;
	background: white;
	padding: 0rpx 24rpx;
}
.block{
	overflow: hidden;
	padding-bottom: 21rpx;
	border-bottom: 1rpx solid rgb(238,238,238);
	position: relative;
}
.box .block:nth-child(1){
	display: none;
}
.block_bottom{
	border:none;
}
.block_title{
	font-family: "PingFang-SC-Bold";
	font-size: 28rpx;
	font-weight: bold;
	color:rgb(51,51,51);
	margin-top: 21rpx;
	height: 28rpx;
  line-height: 28rpx;
}
.block_value{
	font-family: "PingFang-SC-Medium";
	font-size: 24rpx;
	color:rgb(136,136,136);
	margin-top: 16rpx;
	height: 24rpx;
  line-height: 24rpx;
}
.right-arrow{
	position:absolute;
	width: 12rpx;
	height: 20rpx;
	top:44rpx;
	right:0rpx;
}