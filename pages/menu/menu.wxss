page {
  background-color: #ff784f;
  font-size: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
}

.page_hd {
  background-color: #ff784f;
  padding: 75rpx 65rpx 65rpx;
  /* padding: 65rpx; */
}

.page_bd {
  background-color: #ff784f;
  color: #888;
  text-align: center;
  font-size: 14px;
}

.page_title {
  font-family: PingFang-SC-Medium;
  font-size: 15px;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
}

.page_money {
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  align-items:center;
  font-family: PingFang-SC-Medium, PingFang-SC-Blod;
  text-align: center;
  font-size: 78rpx;
  font-weight: 400;
  color: white;
}
.page_money .money{
  position: relative;
}
.page_money .money::first-letter {
  line-height: 78rpx;
  font-size: 39rpx;
  vertical-align: top;
}
.money .reload{
  position: absolute;
  top:45%;
  left:100%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  width:78rpx;
  height:78rpx;
  margin-left: 50rpx;
  overflow: hidden;
}
.money .reload image{
  width:78rpx;
  height:78rpx;
}

.page_bd image {
  width: 55rpx;
  height: 55rpx;
  margin-bottom: 8rpx;
}

.weui-flex {
  display: flex;
  flex-direction: row;
}

.weui-flex_item {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.item_first {
  padding: 16rpx 20rpx 12rpx;
  color: rgb(255, 255, 255);
}

.item_second {
  height: 58rpx;
}

.item_special {
  padding: 62rpx 20rpx;
  color: rgb(51, 51, 51);
}

.items_hd {
  /* display: flex;
  flex-direction: row; */
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.border_special:nth-child(odd) {
  border-bottom: 1px solid rgb(238, 238, 238);
  border-right: 1px solid rgb(238, 238, 238);
}

.border_special:nth-child(even) {
  border-bottom: 1px solid rgb(238, 238, 238);
}

