/**index.wxss**/

page {
  background-color: #f8f8f8;
}

.page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;


}

.panel {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 710rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
  box-shadow: 0px 6px 8px 0px rgba(136, 136, 136, 0.2);
}

.header {
  padding: 50rpx 10px;
  background-color: rgb(255, 119, 78);
  border-radius: 10rpx 10rpx 0 0;
  text-align: center;
  vertical-align: middle;
  color: white;
  font-family: PingFang-SC-Bold;
  font-size: 40rpx;
}

.money {
  position: relative;
  margin: 60rpx auto 28rpx;
  color: rgb(255, 119, 78);
  font-size: 85rpx;
  text-align: center;
}

.remark {
  text-align: center;
  font-family: PingFang-SC-Bold;
  font-size: 40rpx;
}

.qrcode {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  text-align: left;
}

.qrcode > canvas {
  width: 500rpx;
  height:500rpx;
}

/* 支付完成后样式 */
.c-img{
  width:160rpx;
  height:160rpx;
  margin-top:200rpx;
}
.c-money{
  font-size:80rpx;
  color:rgb(51,51,51);
}
.c-remark{
  font-size:26rpx;
  color:rgb(136,136,136);
  margin-bottom: 200rpx;
}
